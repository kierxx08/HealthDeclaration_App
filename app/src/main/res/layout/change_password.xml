<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cp_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_password">

    <ImageView
        android:id="@+id/cp_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/doctor_cover" />

    <RelativeLayout
        android:id="@+id/prfl_layout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cp_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cp_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prfl_layout"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:text="Kier Asis"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textColor"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cptv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cp_fullname"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="kierxx08"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/RL_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cptv_username">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cp_old_pass_eye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#000">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/cp_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@android:color/black"
                        app:met_baseColor="@android:color/black"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_helperTextColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_textColor="@android:color/black"
                        app:met_underlineColor="@android:color/black" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cp_new_pass_eye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#000">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/cp_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@android:color/black"
                        app:met_baseColor="@android:color/black"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_helperTextColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_textColor="@android:color/black"
                        app:met_underlineColor="@android:color/black" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cp_conf_pass_eye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#000">


                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/cp_conf_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint="Retype New Password"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@android:color/black"
                        app:met_baseColor="@android:color/black"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelTextColor="@android:color/black"
                        app:met_helperTextColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_textColor="@android:color/black"
                        app:met_underlineColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/cp_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_radius_001"
                    android:text="Update Password"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>