<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".nurse.nurse_activity_add_member_success">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/namsuc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nurse_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/namsuc_img"
                android:layout_width="250dp"
                android:layout_height="444dp"
                android:layout_gravity="center"
                android:src="@drawable/img_family_002" />

            <com.iambedant.text.OutlineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Successfully Registered"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                app:outlineColor="#000000"
                app:outlineWidth="1" />

            <Button
                android:id="@+id/namsuc_ap"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="Add Patient"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/namsuc_bckhome"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="Back to Main"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>