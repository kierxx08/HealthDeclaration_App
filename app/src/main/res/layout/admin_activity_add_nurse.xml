<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/admin_bg"
    tools:context=".admin.admin_activity_add_nurse">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/aan_doc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/admin_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/admin_tc"/>

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_below="@id/aan_doc_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#465073"
                android:textColor="#ffffff"
                android:text="     Nurse Information"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/aan_doc_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@color/admin_tc"
                app:met_baseColor="@color/admin_tc"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/admin_tc"
                app:met_helperTextColor="@color/admin_tc"
                app:met_primaryColor="@color/admin_tc"
                app:met_textColor="@color/admin_tc"
                app:met_underlineColor="@color/admin_tc" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/aan_doc_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@color/admin_tc"
                app:met_baseColor="@color/admin_tc"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/admin_tc"
                app:met_helperTextColor="@color/admin_tc"
                app:met_primaryColor="@color/admin_tc"
                app:met_textColor="@color/admin_tc"
                app:met_underlineColor="@color/admin_tc" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/aan_doc_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Birthday"
                android:clickable="true"
                android:focusable="false"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@color/admin_tc"
                app:met_baseColor="@color/admin_tc"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/admin_tc"
                app:met_helperTextColor="@color/admin_tc"
                app:met_primaryColor="@color/admin_tc"
                app:met_textColor="@color/admin_tc"
                app:met_underlineColor="@color/admin_tc" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+63"
                    android:textSize="25dp"
                    android:textColor="@color/admin_tc"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/aan_doc_pnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="Mobile #"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textCursorDrawable="@color/admin_tc"
                    app:met_baseColor="@color/admin_tc"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="@color/admin_tc"
                    app:met_helperTextColor="@color/admin_tc"
                    app:met_primaryColor="@color/admin_tc"
                    app:met_textColor="@color/admin_tc"
                    app:met_underlineColor="@color/admin_tc" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Sex"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textColor="@color/admin_tc"/>

                <Spinner
                    android:id="@+id/aan_doc_sex"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="inherit"
                    android:theme="@style/ThemeSpinner2" />

            </LinearLayout>

            <Button
                android:id="@+id/aan_doc_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/shape_radius_002"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:text="SAVE"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>