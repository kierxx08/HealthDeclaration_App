<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nurse.nurse_activity_add_family">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/naf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nurse_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naf_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="     Head of the Family"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/naf_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@android:color/black"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@android:color/black"
                app:met_helperTextColor="@android:color/black"
                app:met_primaryColor="@android:color/black"
                app:met_textColor="@android:color/black"
                app:met_underlineColor="@android:color/black" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/naf_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@android:color/black"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@android:color/black"
                app:met_helperTextColor="@android:color/black"
                app:met_primaryColor="@android:color/black"
                app:met_textColor="@android:color/black"
                app:met_underlineColor="@android:color/black" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/naf_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Birthday"
                android:clickable="true"
                android:focusable="false"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@android:color/black"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@android:color/black"
                app:met_helperTextColor="@android:color/black"
                app:met_primaryColor="@android:color/black"
                app:met_textColor="@android:color/black"
                app:met_underlineColor="@android:color/black" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+63"
                    android:textSize="25dp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/naf_pnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="Mobile #"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textCursorDrawable="@android:color/black"
                    app:met_baseColor="@android:color/black"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="@android:color/black"
                    app:met_helperTextColor="@android:color/black"
                    app:met_primaryColor="@android:color/black"
                    app:met_textColor="@android:color/black"
                    app:met_underlineColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Barangay"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/naf_brgy"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:spinnerMode="dialog"
                    android:textAlignment="inherit"
                    android:theme="@style/ThemeSpinner" />

            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/naf_add_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Additional Address"
                android:inputType="textPersonName|text"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@android:color/black"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@android:color/black"
                app:met_helperTextColor="@android:color/black"
                app:met_primaryColor="@android:color/black"
                app:met_textColor="@android:color/black"
                app:met_underlineColor="@android:color/black" />


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="Position in the Family"
                    android:textSize="19dp" />

                <Spinner
                    android:id="@+id/naf_pitf"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:spinnerMode="dialog"
                    android:textAlignment="inherit"
                    android:theme="@style/ThemeSpinner" />

            </LinearLayout>

            <!--
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Position in the Family"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textCursorDrawable="@android:color/black"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@android:color/black"
                app:met_helperTextColor="@android:color/black"
                app:met_primaryColor="@android:color/black"
                app:met_textColor="@android:color/black"
                app:met_underlineColor="@android:color/black" />
            -->

            <Button
                android:id="@+id/naf_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:text="SAVE"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>